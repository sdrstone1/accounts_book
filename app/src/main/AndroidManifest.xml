<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kollhong.accounts3">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".T_Main"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme" />

        <receiver
            android:name=".zMessageReciever"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".w_Add_Tran"
            android:label="@string/title_activity_add_transactions"
            android:theme="@style/AppTheme"
            android:parentActivityName=".T_Main" />
        <activity
            android:name=".S_FirstLaunch"
            android:label="@string/title_activity_first_launch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".S_Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_main"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".v_Settings0_cat"
            android:label="@string/text_set_category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".v_Settings0_subcat"
            android:label="@string/text_set_category"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".v_Settings2_acc"
            android:label="@string/text_set_account"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".v_Settings2_acc_add"
            android:label="@string/text_set_account"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".v_PreferenceActivityTmp"
            android:label="@string/title_activity_tmp__settings" />

        <receiver android:name=".U_Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/u_widget_info" />
        </receiver>
    </application>

</manifest>