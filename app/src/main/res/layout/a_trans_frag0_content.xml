<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?attr/selectableItemBackground"
              android:clickable="true"
              android:padding="4dp">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/category"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/list_cat2nd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/category_sub"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_reci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/recipient"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/list_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/account"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="10000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical|end"
            android:hint="@string/amount_usage"
            android:padding="0dp"
            android:singleLine="true"
            android:textAlignment="viewEnd" />
    </LinearLayout>
</LinearLayout>